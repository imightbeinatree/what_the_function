<h1>New note</h1>

<% form_for(@note) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area(:description, :size => "26x5") %>
  </p>
  <p>
    <%= f.label :programming_language_id %><br />
    <%= select (:note, :programming_language_id, @programming_languages.map {|u| [u.name,u.id]}) %>
  </p>
  <p>
    <%= f.label :what_function_id %><br />
    <%= select (:note, :what_function_id, @what_functions.map {|u| [u.name,u.id]}) %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', notes_path %>
